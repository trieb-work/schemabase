{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "clear": "rm -rf ./**/node_modules ./**/dist ./**/.next ./**/.turbo",
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "test": "jest -i"
  },
  "devDependencies": {
    "@swc/core": "^1.2.120",
    "@swc/jest": "^0.2.15",
    "@trieb.work/prettier-base": "^0.1.2",
    "@types/jest": "^27.0.3",
    "jest": "^27.4.5",
    "turbo": "latest"
  },
  "turbo": {
    "globalDepencencies": [
      "./env*",
      "tsconfig.json",
      "package.json",
      "jest.config.ts"
    ],
    "pipeline": {
      "build": {
        "dependsOn": [
          "^build"
        ],
        "outputs": [
          "dist/**",
          ".next/**"
        ]
      },
      "lint": {
        "outputs": []
      },
      "dev": {
        "cache": false
      },
      "test": {
        "dependsOn": [
          "build"
        ]
      }
    }
  }
}
