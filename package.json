{
  "name": "eci",
  "version": "0.0.0",
  "engines": {
    "node": ">=16",
    "pnpm": ">=6"
  },
  "scripts": {
    "build": "pnpm -r build",
    "test:unit": "pnpm -r test:unit",
    "test:e2e": "pnpm -r test:e2e"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^15.0.0",
    "@prisma/client": "^3.6.0",
    "@swc/core": "^1.2.121",
    "@trieb.work/prettier-base": "^0.1.2",
    "@types/jest": "^27.0.3",
    "commitlint": "^15.0.0",
    "jest": "^27.4.5",
    "lint-staged": "^12.1.3",
    "prettier": "^2.5.1",
    "prisma": "^3.6.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,html}": [
      "prettier  --write"
    ],
    "*.{yml,yaml,css,json}": [
      "prettier  --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog",
      "disableEmoji": true
    }
  }
}
