  saleorProductVariant       SaleorProductVariant[]
  saleorWarehouse            SaleorWarehouse[]
  saleorOrder                SaleorOrder[]
  saleorLineItem             SaleorLineItem[]
  saleorPackage              SaleorPackage[]

  @@unique([domain, channelSlug])
}

